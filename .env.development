# YTEmpire Development Environment Configuration
# Main environment variables for Docker Compose

# Application
NODE_ENV=development
APP_NAME=YTEmpire
APP_VERSION=1.0.0

# Database - PostgreSQL
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=ytempire_dev
POSTGRES_USER=ytempire_user
POSTGRES_PASSWORD=ytempire_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Email - MailHog for local testing
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
EMAIL_FROM=noreply@ytempire.local

# File Storage - Local paths
UPLOAD_PATH=./uploads
TEMP_PATH=./temp
MAX_FILE_SIZE=104857600

# YouTube API (add your development API key)
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_CLIENT_ID=your-youtube-client-id-here
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret-here

# AI Services (add your API keys)
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_EXPIRE=86400

# Development URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
API_URL=http://localhost/api

# pgAdmin
PGADMIN_EMAIL=admin@ytempire.local
PGADMIN_PASSWORD=admin

# Docker Network
DOCKER_NETWORK_SUBNET=172.20.0.0/16