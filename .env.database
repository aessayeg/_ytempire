# YTEmpire Database Environment Variables
# Copy to .env and update with your values

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ytempire_dev
POSTGRES_USER=ytempire_user
POSTGRES_PASSWORD=ytempire_pass
POSTGRES_SCHEMA=public,users,content,analytics,campaigns
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_POOL_SIZE=10
POSTGRES_POOL_TIMEOUT=30s
POSTGRES_STATEMENT_TIMEOUT=30s
POSTGRES_LOCK_TIMEOUT=10s
POSTGRES_IDLE_TIMEOUT=10m

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Cache Configuration
CACHE_DEFAULT_TTL=1800
CACHE_YOUTUBE_API_TTL=1800
CACHE_ANALYTICS_TTL=300
CACHE_SESSION_TTL=3600
CACHE_ENABLE_COMPRESSION=true

# Database Connection URLs (for ORMs)
DATABASE_URL=postgresql://ytempire_user:ytempire_pass@localhost:5432/ytempire_dev?sslmode=disable&search_path=public,users,content,analytics,campaigns
REDIS_URL=redis://localhost:6379/0

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./backups

# Monitoring
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=100ms
ENABLE_CACHE_METRICS=true

# Development Settings
NODE_ENV=development
DEBUG_SQL=true
DEBUG_CACHE=true