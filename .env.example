# YTEmpire Development Environment Example
# This file shows example values for quick setup

NODE_ENV=development
APP_NAME=YTEmpire

# Database - PostgreSQL
POSTGRES_DB=ytempire_dev
POSTGRES_USER=ytempire_user
POSTGRES_PASSWORD=ytempire_pass
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=dev-jwt-secret-CHANGE-THIS-IN-PRODUCTION
SESSION_SECRET=dev-session-secret-CHANGE-THIS-IN-PRODUCTION

# YouTube API (Get from Google Cloud Console)
YOUTUBE_API_KEY=AIzaSyD-EXAMPLE-KEY
YOUTUBE_CLIENT_ID=123456789012-abcdefghijklmnop.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=GOCSPX-ExampleClientSecret
YOUTUBE_REDIRECT_URI=http://localhost:5000/api/auth/youtube/callback

# Email (Using MailHog for development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
EMAIL_FROM=noreply@ytempire.local

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
FRONTEND_PORT=3000
BACKEND_PORT=5000

# Admin Credentials
PGADMIN_EMAIL=admin@ytempire.local
PGADMIN_PASSWORD=admin

# Development Tools
LOG_LEVEL=debug
DEBUG=ytempire:*

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true