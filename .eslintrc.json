{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "18.0"
    }
  },
  "globals": {
    "cy": "readonly",
    "fail": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "tests/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-unused-vars": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["tests/e2e/**/*.js", "tests/e2e/**/*.spec.js"],
      "globals": {
        "cy": "readonly"
      },
      "rules": {
        "no-unused-vars": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["frontend/**/*.js", "frontend/**/*.jsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["backend/src/jobs/**/*.js", "backend/src/utils/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["backend/src/controllers/**/*.js"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
