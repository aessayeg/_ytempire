# YTEmpire Database Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ytempire_dev
POSTGRES_USER=ytempire_user
POSTGRES_PASSWORD=ytempire_pass
POSTGRES_ROOT_PASSWORD=postgres_root_pass

# PostgreSQL Connection URLs
DATABASE_URL=postgresql://ytempire_user:ytempire_pass@localhost:5432/ytempire_dev
DATABASE_URL_DOCKER=postgresql://ytempire_user:ytempire_pass@postgresql:5432/ytempire_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection URLs
REDIS_URL=redis://localhost:6379/0
REDIS_URL_DOCKER=redis://redis:6379/0

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@ytempire.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug

# Cache TTL Settings (in seconds)
CACHE_YOUTUBE_API_TTL=1800      # 30 minutes
CACHE_ANALYTICS_TTL=300         # 5 minutes
CACHE_SESSION_TTL=3600          # 1 hour
CACHE_QUERY_TTL=300             # 5 minutes

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis Pool Settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"    # 2 AM daily